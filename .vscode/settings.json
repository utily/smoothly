{
	"js/ts.implicitProjectConfig.experimentalDecorators": true,
	"files.exclude": {
		".*": true,
		"*.json": true,
		"stencil.config.ts": true,
		"src/components.d.ts": true,
		"dist": true,
		"www": true,
		"loader": true,
		"README.md": true,
		"LICENSE": true,
	},
	"search.exclude": {
		".*": false,
		"*.json": false,
		"stencil.config.ts": false,
		"src/components.d.ts": false,
		"dist": false,
		"www": false,
		"loader": false,
		"README.md": false,
		"LICENSE": false,
	},
	"files.insertFinalNewline": true,
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"eslint.autoFixOnSave": "explicit",
		"source.fixAll.stylelint": "explicit",
		"stylelint.autoFixOnSave": "explicit"
	},
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"javascript.format.enable": false,
	"typescript.format.enable": false,
	"cSpell.words": [
		"clearables",
		"cloudly",
		"Colorpoint",
		"deselectable",
		"Intergiro",
		"isly",
		"isoly",
		"langly",
		"polikarpos",
		"Proquse",
		"Weekmeter"
	]
}
