{
	"name": "smoothly",
	"version": "1.1.1-alpha.29",
	"description": "Web component library written in Stencil.",
	"author": "PayFunc",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/payfunc/smoothly"
	},
	"bugs": {
		"url": "https://github.com/payfunc/smoothly/issues"
	},
	"homepage": "https://payfunc.com/open-source/smoothly",
	"private": false,
	"main": "dist/index.cjs.js",
	"type": "module",
	"module": "dist/index.js",
	"types": "dist/types/index.d.ts",
	"collection": "dist/collection/collection-manifest.json",
	"collection:main": "dist/collection/index.js",
	"unpkg": "dist/smoothly/smoothly.esm.js",
	"exports": {
		".": {
			"import": "./dist/smoothly/smoothly.esm.js",
			"require": "./dist/smoothly/smoothly.cjs.js"
		},
		"./loader": {
			"import": "./loader/index.js",
			"require": "./loader/index.cjs",
			"types": "./loader/index.d.ts"
		}
	},
	"files": [
		"dist/",
		"loader/"
	],
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.json"
			}
		},
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely|cloudly-http|cloudly-router|cloudly-rest)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"build": "stencil build",
		"start": "stencil build --dev --watch --serve",
		"lint": "eslint 'src/**/*.{js,ts,tsx}'",
		"fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
		"test": "stencil test --spec --e2e",
		"test.watch": "stencil test --spec --e2e --watchAll",
		"clean": "rm -rf .stencil/ dist/ node_modules/ loader/ www/"
	},
	"dependencies": {
		"cloudly-http": "^0.1.7",
		"isly": "^0.1.16",
		"isoly": "^2.3.10",
		"langly": "2.0.9",
		"normalize.css": "^8.0.1",
		"selectively": "^2.0.11",
		"tidily": "^0.1.2",
		"urlpattern-polyfill": "^8.0.2"
	},
	"devDependencies": {
		"@stencil/core": "^4.18.3",
		"@stencil/sass": "^3.0.12",
		"@types/jest": "^29.5.12",
		"@types/pvutils": "^1.0.4",
		"@typescript-eslint/eslint-plugin": "^7.13.1",
		"@typescript-eslint/parser": "^7.13.1",
		"eslint": "^8.56.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20240618",
		"eslint-plugin-simple-import-sort": "^12.1.0",
		"jest": "^29.7.0",
		"jest-cli": "^29.7.0",
		"prettierx": "github:utily/prettierx#utily-20240618",
		"puppeteer": "^22.12.0",
		"typescript": "^5.5.2",
		"web-file-polyfill": "^1.0.4"
	}
}
