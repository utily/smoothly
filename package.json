{
	"name": "smoothly",
	"version": "1.30.0",
	"description": "Web component library written in Stencil.",
	"author": "Utily",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/utily/smoothly.git"
	},
	"bugs": {
		"url": "https://github.com/utily/smoothly/issues"
	},
	"homepage": "https://github.com/utily/smoothly/tree/master-1.0",
	"private": false,
	"main": "dist/index.cjs.js",
	"type": "module",
	"module": "dist/index.js",
	"types": "dist/types/index.d.ts",
	"collection": "dist/collection/collection-manifest.json",
	"collection:main": "dist/collection/index.js",
	"exports": {
		".": {
			"import": {
				"default": "./dist/smoothly/index.esm.js",
				"types": "./dist/types/index.d.ts"
			},
			"require": {
				"default": "./dist/cjs/index.cjs.js",
				"types": "./dist/types/index.d.ts"
			}
		},
		"./loader": {
			"import": "./loader/index.js",
			"require": "./loader/index.cjs",
			"types": "./loader/index.d.ts"
		}
	},
	"files": [
		"dist/",
		"loader/"
	],
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"scripts": {
		"build": "stencil build",
		"check-dts": "git diff --exit-code src/components.d.ts || (echo '‚ùå components.d.ts is outdated! Run \"npm run build\" and commit the changes.' && exit 1)",
		"start": "stencil build --dev --watch --serve",
		"lint": "eslint 'src/**/*.{js,ts,tsx}'",
		"fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
		"test": "vitest --run --allowOnly --environment jsdom",
		"coverage": "vitest --coverage",
		"clean": "rm -rf .stencil/ dist/ node_modules/ loader/ www/"
	},
	"dependencies": {
		"cloudly-http": "^0.1.7",
		"isly": "^0.1.20",
		"isoly": "^3.0.2",
		"langly": "2.0.10",
		"normalize.css": "^8.0.1",
		"selectively": "^2.0.11",
		"tidily": "^0.2.5",
		"urlpattern-polyfill": "^8.0.2"
	},
	"devDependencies": {
		"@stencil/core": "^4.18.3",
		"@stencil/sass": "^3.0.12",
		"@types/node": "^22.10.2",
		"@types/pvutils": "^1.0.4",
		"@typescript-eslint/eslint-plugin": "^7.13.1",
		"@typescript-eslint/parser": "^7.13.1",
		"@vitest/coverage-istanbul": "^2.1.8",
		"eslint": "^8.56.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20240618",
		"eslint-plugin-simple-import-sort": "^12.1.0",
		"jsdom": "^25.0.1",
		"prettierx": "github:utily/prettierx#utily-20240618",
		"typescript": "5.7.2",
		"vitest": "^2.1.8",
		"web-file-polyfill": "^1.0.4"
	}
}
